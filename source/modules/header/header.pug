include ../logo/logo
include ../button/button
include ../main-menu/main-menu
include ../mobile-menu-trigger/mobile-menu-trigger

mixin header(data)
	header.header&attributes(attributes)
		.header__logo
			+logo()

		.header__menu
			+main-menu(mainMenu.default)

		+button(
			to="//github.com/zoxon/gulp-front"
			target="_blank"
			title="Source on Github"
			icon
		).header__github-button
			+icon(name="github-octocat" title="Github octocat mark")
			span.visuallyhidden Github repository

		.header__mobile-menu-trigger
			+mobile-menu-trigger()
